
@rendermode InteractiveServer

@using MatBlazor
@inject NavigationManager Navigation

<MatAppBar Fixed="true">
    <MatAppBarRow>
        <MatAppBarSection>
            <MatIconButton Icon="menu" @onclick="ToggleDrawer" />
            <MatAppBarTitle>Reign of Humanae</MatAppBarTitle>
        </MatAppBarSection>

        <MatAppBarSection Align="MatAppBarSectionAlign.End">
            <MatIconButton Icon="account_circle"
                           @onclick="@(() => Navigation.NavigateTo("/login"))" />
        </MatAppBarSection>
    </MatAppBarRow>
</MatAppBar>

@code {
    [Parameter] public EventCallback ToggleDrawerRequested { get; set; }

    private async Task ToggleDrawer()
        => await ToggleDrawerRequested.InvokeAsync();
}
